{
    "name": "nextshift",
    "version": "3.3.0",
    "type": "module",
    "description": "Team Shift Tracker PWA for 5-team continuous (24/7) schedule",
    "main": "dist/index.js",
    "bin": {
        "nextshift-tui": "./dist-tui/index.js"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "build:tui": "node scripts/build-tui.mjs && chmod +x dist-tui/index.js",
        "tui": "npm run build:tui && node dist-tui/index.js",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check . --write",
        "format": "biome format . --write",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "analyze": "vite build --mode analyze",
        "generate-changelog": "tsx scripts/generate-changelog.ts",
        "generate-icons": "tsx scripts/generate-icons.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tjorim/NextShift.git"
    },
    "keywords": [
        "pwa",
        "shift-tracker",
        "continuous",
        "team-schedule",
        "offline",
        "service-worker"
    ],
    "author": "Jorim Tielemans <tielemans.jorim@gmail.com>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tjorim/NextShift/issues"
    },
    "homepage": "https://github.com/tjorim/NextShift#readme",
    "devDependencies": {
        "@biomejs/biome": "^2.3.1",
        "@sindresorhus/is": "^7.1.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.10.0",
        "@types/react": "^19.2.4",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.0",
        "@vitest/ui": "^4.0.8",
        "canvas": "^3.2.0",
        "esbuild": "^0.27.0",
        "happy-dom": "^20.0.10",
        "lightningcss": "^1.30.2",
        "rollup-plugin-visualizer": "^6.0.5",
        "sass": "^1.93.2",
        "terser": "^5.44.0",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-plugin-pwa": "^1.1.0",
        "vitest": "^4.0.8"
    },
    "engines": {
        "node": ">=20.19.0"
    },
    "dependencies": {
        "bootstrap": "^5.3.8",
        "bootstrap-icons": "^1.13.1",
        "chalk": "^5.6.2",
        "dayjs": "^1.11.19",
        "ink": "^6.5.0",
        "ink-spinner": "^5.0.0",
        "ink-text-input": "^6.0.0",
        "react": "^19.2.0",
        "react-bootstrap": "^2.10.10",
        "react-dom": "^19.2.0"
    }
}
