{
  "name": "nextshift",
  "version": "3.0.0",
  "description": "Team Shift Tracker PWA for 5-team volcontinu schedule",
  "main": "app.js",
  "scripts": {
    "dev": "python -m http.server 8000",
    "serve": "python -m http.server 8000",
    "build": "npm run minify:js",
    "minify:js": "terser app.js --compress --mangle --output app.min.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "test": "echo 'Tests not configured yet'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjorim/NextShift.git"
  },
  "keywords": [
    "pwa",
    "shift-tracker",
    "volcontinu",
    "team-schedule",
    "offline",
    "service-worker"
  ],
  "author": "Jorim Tielemans <tielemans.jorim@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tjorim/NextShift/issues"
  },
  "homepage": "https://github.com/tjorim/NextShift#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.43.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
