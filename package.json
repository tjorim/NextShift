{
    "name": "nextshift",
    "version": "3.2.0",
    "description": "Team Shift Tracker PWA for 5-team continuous (24/7) schedule",
    "main": "dist/index.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "lint": "biome check .",
        "lint:fix": "biome check . --write",
        "format": "biome format . --write",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:watch": "vitest",
        "analyze": "vite build --mode analyze",
        "generate-changelog": "tsx scripts/generate-changelog.ts",
        "generate-icons": "tsx scripts/generate-icons.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tjorim/NextShift.git"
    },
    "keywords": [
        "pwa",
        "shift-tracker",
        "continuous",
        "team-schedule",
        "offline",
        "service-worker"
    ],
    "author": "Jorim Tielemans <tielemans.jorim@gmail.com>",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/tjorim/NextShift/issues"
    },
    "homepage": "https://github.com/tjorim/NextShift#readme",
    "devDependencies": {
        "@biomejs/biome": "^2.1.2",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.1.0",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/ui": "^3.2.4",
        "canvas": "^3.1.2",
        "happy-dom": "^18.0.1",
        "lightningcss": "^1.30.1",
        "rollup-plugin-visualizer": "^6.0.3",
        "sass": "^1.89.2",
        "terser": "^5.43.1",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vite": "^7.0.5",
        "vite-plugin-pwa": "^1.0.1",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "bootstrap": "^5.3.7",
        "bootstrap-icons": "^1.13.1",
        "dayjs": "^1.11.13",
        "react": "^19.1.0",
        "react-bootstrap": "^2.10.10",
        "react-dom": "^19.1.0"
    }
}
