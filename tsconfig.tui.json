{
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"jsx": "react",
		"outDir": "./dist-tui",
		"rootDir": "./src",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/tui/**/*",
		"src/utils/**/*",
		"src/hooks/**/*"
	],
	"exclude": ["node_modules", "dist", "dist-tui"]
}
